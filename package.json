{
  "name": "cracklibjs",
  "description": "Pure JS Cracklib-inspired library for Node.",
  "version": "2.0.4",
  "author": {
    "email": "zac@zacanger.com",
    "name": "Zac Anger",
    "url": "http://zacanger.com"
  },
  "license": "LGPL-3.0",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "cover": "nyc npm run test:tape",
    "preversion": "run-s -s test:lint cover && sortpack",
    "start": "node index",
    "test": "run-s -s test:lint test:tape",
    "test:lint": "standard",
    "test:tape": "tape lib/*.test.js"
  },
  "homepage": "https://github.com/zacanger/cracklibjs#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zacanger/cracklibjs.git"
  },
  "bugs": "https://github.com/zacanger/cracklibjs/issues",
  "keywords": [
    "cracklib",
    "libcrack",
    "password",
    "security"
  ],
  "dependencies": {
    "zeelib": "11.0.1"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "nyc": "14.1.1",
    "sortpack": "2.0.1",
    "standard": "14.3.1",
    "tape": "4.11.0"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "nyc": {
    "include": [
      "lib/index.js"
    ],
    "instrument": true,
    "reporter": [
      "text",
      "html",
      "json"
    ],
    "sourceMap": true
  },
  "os": [
    "darwin",
    "freebsd",
    "linux",
    "openbsd"
  ],
  "funding": {
    "type": "ko-fi",
    "url": "https://ko-fi.com/zacanger"
  }
}
